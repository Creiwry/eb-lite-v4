<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for :user, url: user_path(@user.id), html: { method: :put, class: "mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Edit Profile</h1>
        <br />
        <div class="form-group">
          <%= f.label :first_name, "First Name" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "First Name", class: "form-control" %>
        </div>

       
        <br />

        <div class="form-group">
          <%= f.label :last_name, "Last Name" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "Last Name", class: "form-control" %>
        </div>
        <br />
        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "Description", class: "form-control" %>
        </div>
        <br />
        <div class="actions mt-5">
          <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <br><br><br>


      <%= link_to "Back", :back %>
    </div>
  </div>
</div>