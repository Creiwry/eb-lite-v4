<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for :event, url: event_path(@event.id), html: { method: :patch, class: "mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Edit Event</h1>
        <br />
        <div class="form-group">
          <%= f.label :title, "Title" %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "Title", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :location, "Location" %><br />
          <%= f.text_field :location, autofocus: true, autocomplete: "Location", class: "form-control" %>
        </div>
        <br />
       
        <br />
        <div class="form-group">
          <%= f.label :start_date, "Start Date" %><br />
          <%= f.text_field :start_date, autofocus: true, autocomplete: "Start Date", class: "form-control" %>
        </div>
        <br />



        <div class="form-group">
          <%= f.label :duration, "Duration" %><br />
          <%= f.text_field :duration, autofocus: true, autocomplete: "Duration", class: "form-control" %>
        </div>
        <br />

        <div class="form-group">
          <%= f.label :price, "Price" %><br />
          <%= f.text_field :price, autofocus: true, autocomplete: "Price", class: "form-control" %>
        </div>
        <br />
        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "Description", class: "form-control" %>
        </div>
        <br />

        <br />
        <div class="buttons text-center">
          <%= f.button "Delete", formmethod: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger px-4" %>
        </div> 
        <div class="actions mt-5 text-center">
          <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <br><br><br>


      <%= link_to "Back", :back %>
    </div>
  </div>
</div>